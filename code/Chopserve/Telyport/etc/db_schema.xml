<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="telyport_info" resource="default" engine="innodb" comment="Telyport Info">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>        
        <column xsi:type="varchar" name="order_id" nullable="false" length="255"  comment="Order Id"/>
		<column xsi:type="varchar" name="telyport_id" nullable="false" length="255" comment="Telyport Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>